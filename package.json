{
  "name": "redline-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "video"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && bun run dev",
    "dev:video": "cd video && bun run studio",
    "build:frontend": "cd frontend && bun run build",
    "build:video": "cd video && bun run build",
    "lint:frontend": "cd frontend && bun run lint",
    "dev:backend": "cd backend && uv run uvicorn api.server:app --reload --host 0.0.0.0 --port 8000",
    "start:backend": "cd backend && ./start.sh --api-only"
  }
}
